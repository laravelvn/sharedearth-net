		%header.row
			%h1.village How?
			
			%div.shareOnFb
				%span.on on
				%span share
				%img{:src=>'/assets/img/icons/fb-icon.png'}
				%div.switchbutton
		%div.content.row#popup-sections
			%section.quarter#quarter1{:onClick=>"check1();"}
				%header
					%h1
						Share
							
					%div.imgHolder
						%div.vCenter
							%img{:src=>"/assets/img/guide-share.png", :alt=>""}
