<div class="items-list clearfix">

  <h3 class="default-title">
    <%= @searching_people ? 'In the network' : 'Facebook friends on sharedearth.net' %>
  </h3>

  <ul class="clearfix">
    <% people.each do |person| %>
      <%= render :partial => "person", :locals => {:person => person} %>
    <% end %>
  </ul>
</div>
